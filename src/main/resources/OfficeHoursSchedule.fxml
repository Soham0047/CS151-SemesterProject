<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="s25.cs151.application.controller.OfficeHoursScheduleController"
            prefWidth="800" prefHeight="600">

    <VBox spacing="15" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" 
          AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        
        <Label text="Schedule Office Hours" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints prefWidth="150"/>
                <ColumnConstraints prefWidth="400"/>
            </columnConstraints>
            
            <Label text="Student Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="studentNameField" promptText="Enter student name" 
                       GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <DatePicker fx:id="scheduleDatePicker" 
                      GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Time Slot:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <ComboBox fx:id="timeSlotCombo" promptText="Select time slot" 
                     GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Course:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ComboBox fx:id="courseCombo" promptText="Select course" 
                     GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Reason:" GridPane.rowIndex="4" GridPane.columnIndex="0" 
                  GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets top="5"/>
                </GridPane.margin>
            </Label>
            <TextArea fx:id="reasonField" promptText="Enter reason for meeting" 
                     GridPane.rowIndex="4" GridPane.columnIndex="1" prefHeight="80"/>
            
            <Label text="Comments:" GridPane.rowIndex="5" GridPane.columnIndex="0" 
                  GridPane.valignment="TOP">
                <GridPane.margin>
                    <Insets top="5"/>
                </GridPane.margin>
            </Label>
            <TextArea fx:id="commentField" promptText="Optional comments" 
                     GridPane.rowIndex="5" GridPane.columnIndex="1" prefHeight="80"/>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Clear" onAction="#handleClear"/>
            <Button text="Schedule" onAction="#handleScheduleOfficeHours" 
                   style="-fx-background-color: #4285F4; -fx-text-fill: white;"/>
        </HBox>
    </VBox>
</AnchorPane>
